        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Controls

//Face
    face_x = x;
    face_y = y;

//Eyes - Set eyes to their basic position on the head
    eye1_x = x - 4;
    eye1_y = y - 4;

    eye2_x = x + 3;
    eye2_y = y - 3.5;
    eye2_height = eye2_init_height;
    
if (global.gamepads[0] == true)
{
    colour = c_blue;
    if ( (gamepad_axis_value(0, gp_axislh) != 0) or (gamepad_axis_value(0, gp_axislv) != 0) )
    {
        direction = point_direction(0, 0, gamepad_axis_value(0, gp_axislh), gamepad_axis_value(0, gp_axislv));
        length = point_distance(0, 0, gamepad_axis_value(0, gp_axislh)*face_size/2, gamepad_axis_value(0, gp_axislv)*face_size/2);
        speed = 4;
        eye1_x += lengthdir_x(length, direction + eye1_dir);
        eye1_y += lengthdir_y(length, direction + eye1_dir);
        
        eye2_x += lengthdir_x(length, direction + eye2_dir);
        eye2_y += lengthdir_y(length, direction + eye2_dir);
    }
    else
    {
        speed = 0;
    }
    
    if ( (gamepad_axis_value(0, gp_axisrh) != 0) or (gamepad_axis_value(0, gp_axisrv) != 0) )
    {
        //Face
        face_x = face_x - (gamepad_axis_value(0, gp_axisrh))*3;
        face_y = face_y - (gamepad_axis_value(0, gp_axisrv))*3;
        shake = -shake;
         //Eyes
        eye1_x += random(4) - 2;
        eye1_y += random(4) - 2;
    
        eye2_height = eye2_height / 8 + irandom(1);
        
        instance_create(x + (gamepad_axis_value(0, gp_axisrh))*5, y + (gamepad_axis_value(0, gp_axisrv))*5, oPuke);
        if (!audio_is_playing(sndPuke))
        {
            audio_play_sound(sndPuke, 1, false);
        }
    }

}

if keyboard_check(vk_left)
{
    x -= 2;
}
else if keyboard_check(vk_right)
{
    x += 2;
}
if keyboard_check(vk_up)
{
    y -= 2;
}
else if keyboard_check(vk_down)
{
    y += 2;
}
</string>
